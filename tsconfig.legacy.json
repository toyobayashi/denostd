{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "declaration": true,
    "sourceMap": false,
    "downlevelIteration": true,
    "noEmitHelpers": true,
    "importHelpers": true,
    "outDir": "./dist/cjs",
    "lib": [
      "DOM",
      "ES2020",
      "ESNext.Promise"
    ]
  },
  "include": [
    "polyfill/**/*.ts",
    "polyfill/**/*.js",
    "index.ts",
    "std/async/mod.ts",
    "std/bytes/mod.ts",
    "std/collections/mod.ts",
    "std/datetime/mod.ts",
    "std/encoding/ascii85.ts",
    "std/encoding/base32.ts",
    "std/encoding/base64.ts",
    "std/encoding/base64url.ts",
    "std/encoding/hex.ts",
    "std/encoding/toml.ts",
    "std/encoding/yaml.ts",
    "std/flags/mod.ts",
    "std/fmt/bytes.ts",
    "std/fmt/colors.ts",
    "std/fmt/printf.ts",
    "std/hash/fnv.ts",
    "std/hash/md5.ts",
    "std/hash/sha1.ts",
    "std/hash/sha3.ts",
    "std/hash/sha256.ts",
    "std/hash/sha512.ts",
    "std/node/assert.ts",
    "std/node/buffer.ts",
    "std/node/console.ts",
    "std/node/events.ts",
    "std/node/path.ts",
    "std/node/punycode.ts",
    "std/node/querystring.ts",
    "std/node/string_decoder.ts",
    "std/node/sys.ts",
    "std/node/timers.ts",
    "std/node/url.ts",
    "std/node/util.ts",
    "std/path/mod.ts",
    "std/testing",
    "std/uuid/mod.ts"
  ],
  "exclude": [
    "std/**/*test.ts",
    "std/**/*example.ts",
    "std/**/tests/**/*"
  ]
}
