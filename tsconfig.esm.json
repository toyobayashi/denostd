{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "module": "esnext",
    "target": "es2019",
    "declaration": true,
    "outDir": "./dist/esm"
  },
  "include": [
    "std/async",
    "std/bytes",
    "std/datetime",
    "std/fmt",
    "std/hash",
    "std/node/events.ts",
    "std/node/path.ts",
    "std/node/querystring.ts",
    "std/node/timers.ts",
    "std/node/url.ts",
    "std/node/util.ts",
    "std/path",
    "std/testing",
    "std/uuid"
  ],
  "exclude": [
    "std/**/*test.ts",
    "std/**/*example.ts",
    "std/**/tests/**/*"
  ]
}
